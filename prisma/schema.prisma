// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id         String
  email      String  @unique
  nombre     String
  password   String
  rol        String
  token      String
  confirmado Boolean @default(false)
}

model Categoria {
  id     Int    @id @default(autoincrement())
  nombre String
  icono  String
}

model Pedidos {
  id        Int     @id @default(autoincrement())
  nombre    String
  cedula    String
  direccion String
  telefono  String
  fecha     String
  total     Float
  abono     Float
  restante  Float
  pedido    Json
  estado    String? @default("Pendiente")
}

model Colegios {
  id      Int       @id @default(autoincrement())
  nombre  String
  Precios Precios[]
}

model TipoPrendas {
  id      Int       @id @default(autoincrement())
  nombre  String
  Precios Precios[]
}

model Tallas {
  id      Int       @id @default(autoincrement())
  talla   String
  Precios Precios[]
}

model Precios {
  id          Int         @id @default(autoincrement())
  precio      Float
  colegioId   Int
  prendaId    Int
  tallaId     Int
  //relation
  colegios    Colegios    @relation(fields: [colegioId], references: [id])
  tipoPrendas TipoPrendas @relation(fields: [prendaId], references: [id])
  tallas      Tallas      @relation(fields: [tallaId], references: [id])
}
