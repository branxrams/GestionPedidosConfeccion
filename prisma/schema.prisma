model Colegios {
  id      Int       @id @default(autoincrement())
  nombre  String
  Precios Precios[]
}

model TipoPrendas {
  id      Int       @id @default(autoincrement())
  nombre  String
  Precios Precios[]
}

model Tallas {
  id      Int       @id @default(autoincrement())
  talla   String
  Precios Precios[]
}

model Precios {
  id          Int         @id @default(autoincrement())
  precio      Float
  colegioId   Int
  prendaId    Int
  tallaId     Int
  //relation
  colegios    Colegios    @relation(fields: [colegioId], references: [id])
  tipoPrendas TipoPrendas @relation(fields: [prendaId], references: [id])
  tallas      Tallas      @relation(fields: [tallaId], references: [id])
}
